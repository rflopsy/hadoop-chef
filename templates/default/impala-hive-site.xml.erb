<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>

  <property>
    <name>hive.heartbeat.interval</name>
    <value><%= @hive_heartbeat_interval %></value>
    <description>Send a heartbeat after this interval - used by mapjoin and filter operators</description>
  </property>

  <property>
    <name>hbase.zookeeper.quorum</name>
    <value><%= @zookeeper_address %></value>
    <description>
      point this to the ZK nodes
    </description>
  </property>

 <property>
    <name>fs.default.name</name>
    <value>hdfs://<%= @namenode_fqdn %>:8020/</value>
    <description>
  </description>
  </property>
  <property>
    <name>mapred.job.tracker</name>
    <value><%= @jobtracker_fqdn %>:8021</value>
    <description>
  </description>
  </property>

  <property>
    <name>mapred.map.tasks</name>
    <value><%= @mapred_map_tasks %></value>
    <description>
  </description>
  </property>

  <property>
    <name>hive.aux.jars.path</name>
    <value><%= @hive_aux_jars_path %></value>
    <description>
  
  </description>
  </property>

  <property>
    <name>hive.metastore.local</name>
    <value>true</value>
    <description>controls whether to connect to remove metastore server or open a new metastore server in Hive Client JVM</description>
  </property>

<property>
  <name>javax.jdo.option.ConnectionURL</name>
  <value>jdbc:mysql://localhost:3306/hive?createDatabaseIfNotExist=true</value>
</property>

<property>
  <name>javax.jdo.option.ConnectionDriverName</name>
  <value>com.mysql.jdbc.Driver</value>
</property>

<property>
  <name>javax.jdo.option.ConnectionUserName</name>
  <value>hive</value>
</property>

<property>
  <name>javax.jdo.option.ConnectionPassword</name>
  <value>hive</value>
</property>

<property>
  <name>hive.metastore.warehouse.dir</name>
  <value>/hvar/hive</value>
  <description>location of default database for the warehouse</description>
</property>


<property>
  <name>hive.metastore.local</name>
  <value>false</value>
</property>

<property>
  <name>hive.metastore.uris</name>
  <value>thrift://<%= @hive_metastore %>:9083</value>
</property>
</configuration>
